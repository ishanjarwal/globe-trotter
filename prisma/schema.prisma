generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String   @unique
  name      String?
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trips Trip[] @relation("UserTrips", fields: [], references: [])
}

model Trip {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  user          User?    @relation("UserTrips", fields: [userId], references: [clerkId])
  title         String
  description   String?
  image         String?
  startDate     DateTime
  endDate       DateTime
  budget        String
  totalAdults   Int
  totalChildren Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  public        Boolean  @default(false)

  days Day[]
}

model Day {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tripId    String   @db.ObjectId
  trip      Trip     @relation(fields: [tripId], references: [id])
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  itineraryItems ItineraryItem[]
}

model ItineraryItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  dayId       String   @db.ObjectId
  day         Day      @relation(fields: [dayId], references: [id])
  dayNumber   Int
  title       String
  description String?
  image       String?
  expense     Int
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
