// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  name      String?
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  trips Trip[]
  // preferences UserPreference[] // 
}

model Trip {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [clerkId])
  userId        String
  title         String
  description   String?
  image         String?
  startDate     DateTime
  endDate       DateTime
  budget        String
  totalAdults   Int
  totalChildren Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  public        Boolean  @default(false)

  days Day[]
}

model Day {
  id        String   @id @default(cuid())
  trip      Trip     @relation(fields: [tripId], references: [id])
  tripId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  itineraryItems ItineraryItem[]
}

model ItineraryItem {
  id          String   @id @default(cuid())
  destination Day      @relation(fields: [dayId], references: [id])
  dayId       String
  day         Int
  title       String
  description String?
  image       String?
  expense     Int
  latitude    Float
  longitude   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
